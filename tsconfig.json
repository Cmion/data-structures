{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "outDir": "build",
      "sourceMap": true,
      "incremental": true,
      "declaration": true,
      "declarationMap": true,
      "composite": true,
      "removeComments": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "typeRoots": ["node_modules/@types"],
      "moduleResolution": "node"
    },
    "include": ["src/**/*.ts", "**/*.ts"],
    "exclude": ["node_modules", ".vscode"]
  }